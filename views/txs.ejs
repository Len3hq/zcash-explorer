<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Zcash Explorer - Transactions</title>
  <link rel="stylesheet" href="/styles.css" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    referrerpolicy="no-referrer"
  />
  <script src="/app.js" defer></script>
</head>
<body class="theme-zec">
  <header class="topbar">
    <a href="/" class="brand brand-link">
      <div class="brand-logo">Z</div>
      <div class="brand-text">
        <span class="brand-title">Zcash Explorer</span>
        <span class="brand-subtitle">Recent transactions</span>
      </div>
    </a>
    <nav class="nav-tabs">
      <a href="/" class="nav-tab <%= activeTab === 'home' ? 'nav-tab-active' : '' %>">Overview</a>
      <a href="/blocks" class="nav-tab <%= activeTab === 'blocks' ? 'nav-tab-active' : '' %>">Blocks</a>
      <a href="/txs" class="nav-tab <%= activeTab === 'txs' ? 'nav-tab-active' : '' %>">Transactions</a>
    </nav>
    <div class="topbar-actions">
      <form method="POST" action="/search" class="search-form">
        <input
          class="search-input"
          type="text"
          name="query"
          placeholder="Search by block height, block hash, or transaction ID"
          required
        />
        <button type="submit" class="button-primary">
          <i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i>
          <span>Search</span>
        </button>
      </form>
      <a href="/" class="back-link">Home</a>
      <button type="button" class="theme-toggle" data-theme-toggle>
        <i class="fa-solid fa-moon theme-toggle-icon" aria-hidden="true"></i>
      </button>
    </div>
  </header>

  <main class="container wide-layout">
    <section class="card table-card">
      <div class="card-header">
        <div class="section-title">Recent Transactions</div>
        <span class="card-subtext">Up to 50 recent transactions from the latest blocks</span>
      </div>
      <div class="table-wrapper txs-table-wrapper">
        <table class="txs-table">
          <thead>
            <tr>
              <th>TxID</th>
              <th>Block</th>
              <th>Height</th>
              <th>Time (UTC)</th>
              <th>Inputs</th>
              <th>Outputs</th>
              <th>Output (ZEC)</th>
              <th>Tx Type</th>
            </tr>
          </thead>
          <tbody>
            <% txs.forEach(function(row) { %>
              <tr>
                <td class="hash hash-wrap">
                  <a href="/tx/<%= row.txid %>" class="hash-with-copy">
                    <span class="hash-truncate"><%= row.txid %></span>
                  </a>
                </td>
                <td class="hash hash-wrap">
                  <a href="/block/<%= row.blockHash %>" class="hash-with-copy">
                    <span class="hash-truncate"><%= row.blockHash %></span>
                  </a>
                </td>
                <td>
                  <span class="hash-with-copy">
                    <a href="/block/<%= row.blockHash %>" class="hash-truncate"><%= row.height %></a>
                  </span>
                </td>
                <td class="timestamp"><%= new Date(row.time * 1000).toISOString() %></td>
                <td><%= row.inputsCount != null ? row.inputsCount : '–' %></td>
                <td><%= row.outputsCount != null ? row.outputsCount : '–' %></td>
                <td>
                  <% if (typeof row.outputTotal === 'number') { %>
                    <%= row.outputTotal.toFixed(8) %>
                  <% } else { %>
                    <span class="muted">&ndash;</span>
                  <% } %>
                </td>
                <td>
                  <span class="tx-type">
                    <% if (row.txType === 'Coinbase') { %>
                      <i class="fa-solid fa-coins tx-type-icon tx-type-coinbase" aria-hidden="true"></i>
                    <% } else if (row.txType === 'Shielded') { %>
                      <i class="fa-solid fa-shield-halved tx-type-icon tx-type-shielded" aria-hidden="true"></i>
                    <% } else if (row.txType === 'Transparent') { %>
                      <i class="fa-regular fa-circle tx-type-icon tx-type-transparent" aria-hidden="true"></i>
                    <% } else { %>
                      <i class="fa-regular fa-question-circle tx-type-icon" aria-hidden="true"></i>
                    <% } %>
                    <span><%= row.txType %></span>
                  </span>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </main>
</body>
</html>
