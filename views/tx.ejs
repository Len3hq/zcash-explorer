<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Zcash Explorer - Tx <%= tx.txid %></title>
  <link rel="stylesheet" href="/styles.css" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    referrerpolicy="no-referrer"
  />
  <script src="/app.js" defer></script>
</head>
<body class="theme-zec">
  <header class="topbar">
    <a href="/" class="brand brand-link">
      <div class="brand-logo">Z</div>
      <div class="brand-text">
        <span class="brand-title">Zcash Explorer</span>
        <span class="brand-subtitle">Transaction <%= tx.txid %></span>
      </div>
    </a>
    <nav class="nav-tabs">
      <a href="/" class="nav-tab <%= activeTab === 'home' ? 'nav-tab-active' : '' %>">Overview</a>
      <a href="/blocks" class="nav-tab <%= activeTab === 'blocks' ? 'nav-tab-active' : '' %>">Blocks</a>
      <a href="/txs" class="nav-tab <%= activeTab === 'txs' ? 'nav-tab-active' : '' %>">Transactions</a>
    </nav>
    <div class="topbar-actions">
      <form method="POST" action="/search" class="search-form">
        <input
          class="search-input"
          type="text"
          name="query"
          placeholder="Search by block height, block hash, or transaction ID"
          required
        />
        <button type="submit" class="button-primary">
          <i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i>
          <span>Search</span>
        </button>
      </form>
      <a href="/" class="back-link">&larr; Back to home</a>
      <button type="button" class="theme-toggle" data-theme-toggle>
        <i class="fa-solid fa-moon theme-toggle-icon" aria-hidden="true"></i>
      </button>
    </div>
  </header>

  <main class="container wide-layout">
    <section class="grid-2">
      <!-- Primary transaction summary -->
      <div class="card block-main-card">
        <div class="page-header">
          <h1 class="page-title">Transaction</h1>
          <div class="chip">
            <span class="badge-dot"></span>
            <span class="chip-label">TxID</span>
          </div>
        </div>

        <div class="detail-list">
          <div class="detail-item">
            <div class="key-label">TxID</div>
            <div class="key-value kv-mono">
              <span class="hash-with-copy">
                <span class="hash-truncate"><%= tx.txid %></span>
              </span>
            </div>
          </div>

          <div class="detail-item">
            <div class="key-label">Version</div>
            <div class="key-value"><%= tx.version %></div>
          </div>

          <div class="detail-item">
            <div class="key-label">Lock Time</div>
            <div class="key-value"><%= tx.locktime %></div>
          </div>

          <div class="detail-item">
            <div class="key-label">Inputs</div>
            <div class="key-value"><%= decoded.inputCount %> (<%= decoded.inputTotal.toFixed(8) %> ZEC)</div>
          </div>

          <div class="detail-item">
            <div class="key-label">Outputs</div>
            <div class="key-value"><%= decoded.outputCount %> (<%= decoded.totalOutput.toFixed(8) %> ZEC)</div>
          </div>

          <div class="detail-item">
            <div class="key-label">Type</div>
            <div class="key-value"><%= decoded.isCoinbase ? 'Coinbase' : ((tx.vjoinsplit && tx.vjoinsplit.length) || (typeof tx.valueBalance === 'number' && tx.valueBalance !== 0) ? 'Shielded' : 'Transparent') %></div>
          </div>

          <% if (typeof tx.confirmations === 'number') { %>
            <div class="detail-item">
              <div class="key-label">Confirmations</div>
              <div class="key-value"><%= tx.confirmations %></div>
            </div>
          <% } %>

          <% if (tx.blockhash) { %>
            <div class="detail-item">
              <div class="key-label">Block</div>
              <div class="key-value kv-mono">
                <a href="/block/<%= tx.blockhash %>" class="hash-with-copy">
                  <span class="hash-truncate"><%= tx.blockhash %></span>
                </a>
              </div>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Technical transaction details -->
      <div class="card block-tech-card">
        <div class="card-header">
          <div class="section-title">Technical Details</div>
        </div>
        <div class="detail-list">
          <div class="detail-item">
            <div class="key-label">Size</div>
            <div class="key-value"><%= tx.size != null ? tx.size.toLocaleString() + ' bytes' : 'â€“' %></div>
          </div>

          <% if (tx.vsize != null) { %>
          <div class="detail-item">
            <div class="key-label">vSize</div>
            <div class="key-value"><%= tx.vsize.toLocaleString() %></div>
          </div>
          <% } %>

          <% if (tx.time != null) { %>
          <div class="detail-item">
            <div class="key-label">Time</div>
            <div class="key-value"><%= new Date(tx.time * 1000).toISOString() %></div>
          </div>
          <% } %>

          <% if (tx.expiryheight != null) { %>
          <div class="detail-item">
            <div class="key-label">Expiry height</div>
            <div class="key-value"><%= tx.expiryheight %></div>
          </div>
          <% } %>
        </div>
      </div>
    </section>

    <section class="card mt-lg">
      <div class="card-header">
        <div class="section-title">Decoded Outputs</div>
      </div>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Address</th>
              <th>Type</th>
              <th>Value (ZEC)</th>
            </tr>
          </thead>
          <tbody>
            <% decoded.outputs.forEach(function(o) { %>
              <tr>
                <td><%= o.n %></td>
                <td class="hash">
                  <% if (o.addresses && o.addresses.length) { %>
                    <span class="hash-with-copy">
                      <span class="hash-truncate"><%= o.addresses[0] %></span>
                    </span>
                  <% } else { %>
                    <span class="muted">(no address)</span>
                  <% } %>
                </td>
                <td><%= o.type || 'unknown' %></td>
                <td><%= typeof o.value === 'number' ? o.value.toFixed(8) : '0.00000000' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

    <section class="card mt-lg">
      <div class="card-header">
        <div class="section-title">Inputs (vin)</div>
      </div>
      <pre><%= JSON.stringify(tx.vin, null, 2) %></pre>
    </section>

    <section class="card mt-lg">
      <div class="card-header">
        <div class="section-title">Outputs (vout)</div>
      </div>
      <pre><%= JSON.stringify(tx.vout, null, 2) %></pre>
    </section>

    <% if (tx.vjoinsplit && tx.vjoinsplit.length) { %>
      <section class="card mt-lg">
        <div class="card-header">
          <div class="section-title">Shielded JoinSplits (vjoinsplit)</div>
        </div>
        <pre><%= JSON.stringify(tx.vjoinsplit, null, 2) %></pre>
      </section>
    <% } %>

    <% if (tx.valueBalance !== undefined) { %>
      <section class="card mt-lg">
        <div class="card-header">
          <div class="section-title">Value Balance</div>
        </div>
        <pre><%= JSON.stringify(tx.valueBalance, null, 2) %></pre>
      </section>
    <% } %>

    <section class="card mt-lg">
      <div class="card-header">
        <div class="section-title">Raw Transaction</div>
        <button type="button" class="button-secondary" data-raw-modal-open>View raw JSON</button>
      </div>
    </section>

    <div class="modal-backdrop" data-raw-modal hidden="hidden">
      <div class="modal">
        <div class="modal-header">
          <div class="section-title">Raw JSON</div>
          <div class="modal-actions">
            <button type="button" class="modal-close" data-raw-modal-close aria-label="Close raw JSON">&times;</button>
          </div>
        </div>
        <div class="modal-body">
          <pre id="raw-json"><%= JSON.stringify(tx, null, 2) %></pre>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
