<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Zcash Explorer - Blocks</title>
  <link rel="stylesheet" href="/styles.css" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    referrerpolicy="no-referrer"
  />
  <script src="/app.js" defer></script>
</head>
<body class="theme-zec">
  <header class="topbar">
    <a href="/" class="brand brand-link">
      <div class="brand-logo">Z</div>
      <div class="brand-text">
        <span class="brand-title">Zcash Explorer</span>
        <span class="brand-subtitle">Recent blocks</span>
      </div>
    </a>
    <nav class="nav-tabs">
      <a href="/" class="nav-tab <%= activeTab === 'home' ? 'nav-tab-active' : '' %>">Overview</a>
      <a href="/blocks" class="nav-tab <%= activeTab === 'blocks' ? 'nav-tab-active' : '' %>">Blocks</a>
      <a href="/txs" class="nav-tab <%= activeTab === 'txs' ? 'nav-tab-active' : '' %>">Transactions</a>
    </nav>
    <div class="topbar-actions">
      <form method="POST" action="/search" class="search-form">
        <input
          class="search-input"
          type="text"
          name="query"
          placeholder="Search by block height, block hash, or transaction ID"
          required
        />
        <button type="submit" class="button-primary">
          <i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i>
          <span>Search</span>
        </button>
      </form>
      <a href="/" class="back-link">Home</a>
      <button type="button" class="theme-toggle" data-theme-toggle>
        <i class="fa-solid fa-moon theme-toggle-icon" aria-hidden="true"></i>
      </button>
    </div>
  </header>

  <main class="container">
    <section class="card table-card wide-layout">
      <div class="card-header">
        <div class="section-title">Recent Blocks</div>
        <span class="card-subtext">Last <%= blocks.length %> blocks on the <%= info.chain %> chain</span>
      </div>
      <div class="table-wrapper blocks-table-wrapper">
        <table class="blocks-table">
          <thead>
            <tr>
              <th class="col-height">Height</th>
              <th class="col-hash">Hash</th>
              <th class="col-time">Mined on</th>
              <th class="col-txns">Txns</th>
              <th class="col-size">Size</th>
              <th class="col-output">Output (ZEC)</th>
            </tr>
          </thead>
          <tbody>
            <% blocks.forEach(function(block) { %>
              <tr>
                <td class="col-height">
                  <span class="hash-with-copy">
                    <a href="/block/<%= block.height %>" class="hash-truncate"><%= block.height %></a>
                  </span>
                </td>
                <td class="hash col-hash">
                  <a href="/block/<%= block.height %>" class="hash-with-copy">
                    <span class="hash-truncate" title="<%= block.hash %>"><%= block.hash %></span>
                  </a>
                </td>
                <td class="timestamp col-time"><%= new Date(block.time * 1000).toISOString() %></td>
                <td class="col-txns">
                  <span class="tx-count-pill"><span>&bull;</span><span><%= block.txCount %></span></span>
                </td>
                <td class="col-size">
                  <% if (block.size) { %>
                    <%= (block.size / 1024).toFixed(2) %> KB
                  <% } else { %>
                    <span class="muted">&ndash;</span>
                  <% } %>
                </td>
                <td class="col-output">
                  <% if (typeof block.outputTotal === 'number') { %>
                    <%= block.outputTotal.toFixed(8) %>
                  <% } else { %>
                    <span class="muted">&ndash;</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </main>
</body>
</html>
